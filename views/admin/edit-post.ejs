<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Edit post</title>
    <% include layout/head %>
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
</head>

<body>
    <div class="container">
        <% include layout/nav %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        Edit post
                    </h5>
                    <% if (message.length) { %>
                        <% message.forEach((error) => { %>
                            <div class="alert alert-danger"><%= error.msg %></div>
                        <% }) %>
                    <% } %>
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form" method="" action="">
                                <input type="hidden" value="<% if (data) { %><%= data.id %> <% } %>" class="id" name="id">
                                <div class="form-group">
                                    <label>Title</label>
                                    <input value="<% if (data) { %><%= data.title %> <% } %>" class="form-control title" name="title" placeholder="Enter text">
                                </div>
                                <div class="form-group">
                                    <label>content</label>
                                    <textarea class="form-control content" name="content" rows="3">
                                        <% if (data) { %><%= data.content %> <% } %>
                                    </textarea>
                                </div>
                                <div class="form-group">
                                    <label>Author</label>
                                    <input value="<% if (data) { %><%= data.author %> <% } %>" class="form-control author" name="author" placeholder="Enter text">
                                </div>
                                <button class="btn btn-primary post_edit" type="submit" value="submit">Add</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <script src="/assets/js/post.js" type="text/javascript"></script>
</body>

</html>