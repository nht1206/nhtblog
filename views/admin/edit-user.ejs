<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Edit user</title>
    <% include layout/head %>
</head>

<body>
    <div class="container">
        <% include layout/nav %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        Edit user
                    </h5>
                    <% if (message.length) { %>
                        <% message.forEach((error) => { %>
                            <div class="alert alert-danger"><%= error.msg %></div>
                        <% }) %>
                    <% } %>
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form" method="" action="">
                                <input type="hidden" value="<% if (data) { %><%= data.id %> <% } %>" class="id" name="id">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input value="<% if (data) { %><%= data.name %> <% } %>" class="form-control name" name="name" placeholder="Enter text">
                                </div>
                                <div class="form-group">
                                    <label>Username</label>
                                    <input value="<% if (data) { %><%= data.username %> <% } %>" class="form-control username" name="username" placeholder="Enter text">
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input value="<% if (data) { %><%= data.email %> <% } %>" class="form-control email" name="email" placeholder="Enter text">
                                </div>
                                <button class="btn btn-primary user_edit" type="submit" value="submit">Add</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <script src="/assets/js/user.js" type="text/javascript"></script>
</body>

</html>