<!-- views/login.ejs -->
<!doctype html>
<html>

<head>
    <title>Admin dashboard</title>
    <%- include layout/head %>
</head>

<body>
    <div class="container">
        <% include layout/nav %>
            <div class="row justify-content-end">
                <div class="col-md-3">
                    <a href="/admin/post" class="btn btn-success">Add new post</a>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Posts
                </div>
                <!-- .panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Content</th>
                                    <th>Author</th>
                                    <th>Create time</th>
                                    <th>Update time</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (data) { %>
                                    <% data.posts.forEach((post) => { %>
                                        <tr>
                                            <td>
                                                <%= post.id %>
                                            </td>
                                            <td>
                                                <%= post.title %>
                                            </td>
                                            <td>
                                                <%= post.content %>
                                            </td>
                                            <td>
                                                <%= post.author %>
                                            </td>
                                            <td>
                                                <%= post.created_at %>
                                            </td>
                                            <td>
                                                <%= post.updated_at %>
                                            </td>
                                            <td>
                                                <a href="/admin/post/edit/<%= post.id %>" class="btn btn-primary">Edit</a>
                                                <button  postid="<%= post.id %>" class="btn btn-danger post_delete">Delete</button>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } %>
                            </tbody>
                            <% if (errorsMsg) { %>
                                <div class="alert alert-danger"><%= errorsMsg %></div>
                            <% } %>
                            <% if (successMsg) { %>
                                <div class="alert alert-success"><%= successMsg %></div>
                            <% } %>  
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
    </div>
    <script src="/assets/js/post.js" type="text/javascript"></script>
</body>

</html>