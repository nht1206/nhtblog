<!-- views/login.ejs -->
<!doctype html>
<html>

<head>
    <title>Admin dashboard</title>
    <%- include layout/head %>
</head>

<body>
    <div class="container">
        <% include layout/nav %>
        <div class="row justify-content-end">
            <div class="col-md-3">
                <a href="/admin/post" class="btn btn-success">Add new user</a>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                Users
            </div>
            <!-- .panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Create time</th>
                                <th>Update time</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data) { %>
                                <% data.users.forEach((user) => { %>
                                    <tr>
                                        <td>
                                            <%= user.id %>
                                        </td>
                                        <td>
                                            <%= user.name %>
                                        </td>
                                        <td>
                                            <%= user.username %>
                                        </td>
                                        <td>
                                            <%= user.email %>
                                        </td>
                                        <td>
                                            <%= user.date_create %>
                                        </td>
                                        <td>
                                            <%= user.date_update %>
                                        </td>
                                        <td>
                                            <a href="/admin/user/edit/<%= user.id %>" class="btn btn-primary">Edit</a>
                                            <button  postid="<%= user.id %>" class="btn btn-danger post_delete">Delete</button>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %> 
                        </tbody>
                        <% if (errorsMsg) { %>
                            <div class="alert alert-danger"><%= errorsMsg %></div>
                        <% } %>
                        <% if (successMsg) { %>
                            <div class="alert alert-success"><%= successMsg %></div>
                        <% } %>  
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <script src="/assets/js/user.js" type="text/javascript"></script>
</body>

</html>